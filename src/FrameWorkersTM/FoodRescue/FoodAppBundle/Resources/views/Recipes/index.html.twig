{# base template yra app/resources/views/base.html.twig #}
{% extends '::base.html.twig' %}

{% block title %} Receptai {% endblock %}

{% block body %}
paginationo reikia?
<h4>Ką pasigaminti?</h4>
 <div class="container">

     <div class="row">
         <div class="jumbotron col-lg-12 col-md-12 col-sm-12 ">
             {% for recipe in recipes  %}

                 <div class="rec_wrap clearfix">
                     <div class="rec_image">

                         <img src="{{ asset('assets/images/recipes/') }}{{ recipe.image_name}}"
                              width="100" height="100" />
                     </div>
                     <div class="rec_descr">
                         <h4><a href="view/{{  recipe.id }}">{{ recipe.name }}</a></h4>
                         <!--<p>
                             pienas 100ml, kiausiniai 6vnt, druska ziupsnelis, citrina 1skiltele, kiauliena 50g, aliejus saukstelis
                         </p>-->
                         {% if recipe.products_nr == recipe.products_accepted  %}
                         <div class="rec_stats">
                             <img src="{{ asset('bootstrap/images/tick.png') }}" height="20" />
                             <span>Turi visus produktus - kodėl nepasigaminus šio patiekalo?</span>
                         </div>
                         {% endif %}
                         <div class="rec_fav">

                             {% if recipe.cooked %}
                                 <img src="{{ asset('bootstrap/images/ic_pot.png') }}" height="30" title="Jau gaminau!" />
                             {% endif %}
                             {% if recipe.liked %}
                                 <img src="{{ asset('bootstrap/images/star.png') }}" height="30" title="Mėgstamas patiekalas" />
                             {% endif %}

                         </div>
                     </div>
                 </div>

             {% endfor %}

         </div>
     </div>
 
 </div>

{% endblock %}