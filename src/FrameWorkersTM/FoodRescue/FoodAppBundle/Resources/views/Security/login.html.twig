                <div>{{ error|trans }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <table class="">
                    <tr>
                        <td><label for="username">Prisijungimo vardas </label></td>
                        <td><input class="form-control"type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
                    </tr>
                    <tr>
                        <td><label for="password">Slapta≈æodis</label></td>
                        <td><input class="form-control" type="password" id="password" name="_password" required="required" /> </td>
                    </tr>
                </table>

                <div class="ccenter">
                    <input type="submit" id="_submit" class="btn btn-primary btn-md" name="_submit" value="Prisijungti" />
                </div>

            </form>
        </div>

        <div class="col-lg-4 col-md-4"> </div>
        <div class="col-lg-2 col-md-2"> </div>
    </div>
  </div>
</div>
{% endblock %}