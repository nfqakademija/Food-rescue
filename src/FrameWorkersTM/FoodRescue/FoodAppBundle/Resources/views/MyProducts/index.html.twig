{# base template yra app/resources/views/base.html.twig #}
{% extends '::base.html.twig' %}

{% block title %} Mano produktai {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5">
            <div class="jumbotron">
                <h4>Pridėti produktą</h4>
                <div class="row">
                    <form>
                        <div class="form-group col-sm-12 col-md-8 col-lg-5">
                            <label for="name">Pavadinimas</label>
                            <input type="text" class="form-control" id="name" placeholder="Produktas">
                        </div>
                        <div class="form-group col-sm-2 col-md-2 col-lg-2">
                            <label for="quantity">Kiekis</label>
                            <input type="number" class="form-control" id="quantity">
                            <select>
                                <option class="form-control" value="num">vnt.</option>
                                <option class="form-control" value="litres">l</option>
                                <option class="form-control" value="grams">g</option>
                            </select>
                            <div class="form-group">
                                <label for="endDate">Sugedimo data</label>
                                <input type="date" class="form-control" id="endDate">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Išsaugoti">
                            </div>
                        </div>

                    </form>
                </div>


            </div>

        </div>
        <div class="col-lg-5 col-md-5 col-sm-5">
            <div class="jumbotron">

            </div>
        </div>


    </div>
    <div class="row">
        <div class="jumbotron">


        </div>
    </div>
{% endblock %}